{% extends "base.html.twig" %}

{% block title %}
    {{ title}}
{% endblock %}

{% block body %}
<pre>
    </pre>
   <div class="container mx-auto">
    <h1 class="text-5xl mt-24 mb-8 text-center">
        {{ title }}
    </h1>

    {% include "components/_search_data.html.twig" with {
        form : form
    } only %}
    {% if allCategories is defined %}
        {% include "components/_dropdown.html.twig" with {
            options: allCategories,
        } %}
    {% endif %}
    
    <div class="flex flex-row flex-wrap justify-evenly mt-8">
       {% for post in posts %}
           {% include "components/_card.html.twig" with {post: post} only %}
       {% endfor %} 
    </div>
    <div class="navigation flex justify-center mb-8 text-2xl">
      {{ knp_pagination_render(posts) }}
    </div>
   </div>
{% endblock %}
